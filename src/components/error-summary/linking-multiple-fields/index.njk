  name: 'dob',
  errorMessage: {
    text: "Enter your date of birth and include a day, month and year"
  },
  items: [
    {
      name: "day",
      classes: "govuk-input--width-2 govuk-input--error",
      value: 5
    },
    {
      name: "month",
      classes: "govuk-input--width-2 govuk-input--error",
      value: 12
    },
    {
      name: "year",
      classes: "govuk-input--width-4 govuk-input--error"
    }
  ]
  })
