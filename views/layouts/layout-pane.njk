{% extends "_generic.njk" %}

{% block body %}
<div class="app-o-pane__body">
  <div class="app-o-pane__toc app-u-hide-mobile">
    {% block toc %}
    {% endblock %}
  </div>
  <div class="app-o-pane__content">
    <main id="content" class="app-c-content" role="main">
      <div class="app-c-content__header">
        <p class="app-c-content__section-heading">
          {% if theme %}
              {{ theme }}
            {% else %}
              {{ section }}
          {% endif %}
        </p>
        <h1 class="app-c-content__heading heading-xlarge">{{ title }}</h1>
      </div>
      {{ contents | safe }}
    </main>
    {# No JS fallback to show overview #}
    <div class="app-o-pane__toc-mobile-overview app-u-hide-desktop">
      {% block endtoc %}
      {% endblock %}
    </div>
    {% include "_footer.njk" %}
  </div>
{% endblock %}
